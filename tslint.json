{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "adjacent-overload-signatures": false,
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "class-name": true,
    "curly": [
      true,
      "all"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-classes-per-file": [
      true,
      5,
      "exclude-class-expressions"
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": false,
    "no-console": true,
    "no-empty-interface": false,
    "no-empty": false,
    "semicolon": false,
    "no-console": false,
    "no-object-mutation": false,
    "no-parameter-reassignment": true,
    "no-return-await": true,
    "no-shadowed-variable": false,
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_",
        "check-parameters": true
      }
    ],
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "radix": true,
    "readonly-array": [
      false
    ],
    "readonly-keyword": [
      false
    ],
    "space-before-function-paren": false,
    "trailing-comma": [
      true
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}
